{
    "name": "COVID-19 Blocker",
    "version": "0.1",
    "icons": {
        "16": "/img/icons/icon_16.png",
        "128": "/img/icons/icon_128.jpg"
    },

    "description": "Block Social Media COVID-19 content",
    "permissions": [
        "geolocation"
    ],

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": [
                    "/js/external/jquery.js",
                    "/js/content_script.js"
                ]
        }
    ],

    "manifest_version": 2
}
